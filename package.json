{
  "name": "md2gost",
  "displayName": "md2gost",
  "description": "Converts markdown to docx format, trying to comply with GOST standards",
  "icon": "./imgs/icon.png",
  "version": "0.1.0",
  "publisher": "MixelTe",
  "repository": {
    "url": "https://github.com/MixelTe/md2gost",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "md2gost.render_pdf",
        "title": "Render current file to pdf",
        "enablement": "resourceFilename =~ /\\.g\\.md$/",
        "icon": {
          "dark": "imgs/ghost_white.svg",
          "light": "imgs/ghost.svg"
        }
      },
      {
        "command": "md2gost.render_docx",
        "title": "Render current file to docx only",
        "enablement": "resourceFilename =~ /\\.g\\.md$/",
        "icon": {
          "dark": "imgs/ghost_small_white.svg",
          "light": "imgs/ghost_small.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceFilename =~ /\\.g\\.md$/",
          "command": "md2gost.render_docx",
          "group": "navigation"
        },
        {
          "when": "resourceFilename =~ /\\.g\\.md$/",
          "command": "md2gost.render_pdf",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "image-size": "^2.0.2",
    "pdf-lib": "^1.17.1"
  }
}